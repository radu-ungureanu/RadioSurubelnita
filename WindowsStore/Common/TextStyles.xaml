<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Resources/bebes.ttf#bebas"/>
    </Style>

    <Style x:Key="HeaderText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
        <Setter Property="Foreground" Value="#9DC118"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="SubHeaderText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
        <Setter Property="Foreground" Value="#DB6F27"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="SongTitleText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
        <Setter Property="Foreground" Value="#DB6F27"/>
    </Style>

</ResourceDictionary>
